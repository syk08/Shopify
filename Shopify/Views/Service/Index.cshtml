
@{
    ViewBag.Title = "Index";
}


<div class="container mt-5">
    <h2 class="text-center mb-4">Our Services</h2>
    <p class="text-center text-muted">We offer the best services to enhance your shopping experience.</p>

    <div class="row mt-4">
        <!-- Fast Delivery -->
        <div class="col-md-4">
            <div class="card shadow p-3 text-center">
                <i class="fa-solid fa-truck fa-3x text-primary"></i>
                <h4 class="mt-3">Fast Delivery</h4>
                <p>Get your products delivered within 24-48 hours with our express shipping.</p>
            </div>
        </div>

        <!-- Secure Payment -->
        <div class="col-md-4">
            <div class="card shadow p-3 text-center">
                <i class="fa-solid fa-lock fa-3x text-success"></i>
                <h4 class="mt-3">Secure Payment</h4>
                <p>We provide 100% secure payment options to protect your transactions.</p>
            </div>
        </div>

        <!-- Customer Support -->
        <div class="col-md-4">
            <div class="card shadow p-3 text-center">
                <i class="fa-solid fa-headset fa-3x text-danger"></i>
                <h4 class="mt-3">24/7 Customer Support</h4>
                <p>Our support team is available 24/7 to assist you with any issues.</p>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <!-- Easy Returns -->
        <div class="col-md-4">
            <div class="card shadow p-3 text-center">
                <i class="fa-solid fa-rotate-left fa-3x text-warning"></i>
                <h4 class="mt-3">Easy Returns</h4>
                <p>Not satisfied? Return or exchange your product within 30 days.</p>
            </div>
        </div>

        <!-- Best Quality -->
        <div class="col-md-4">
            <div class="card shadow p-3 text-center">
                <i class="fa-solid fa-star fa-3x text-info"></i>
                <h4 class="mt-3">Best Quality</h4>
                <p>We ensure high-quality products with a warranty for your satisfaction.</p>
            </div>
        </div>

        <!-- Multiple Payment Options -->
        <div class="col-md-4">
            <div class="card shadow p-3 text-center">
                <i class="fa-solid fa-credit-card fa-3x text-secondary"></i>
                <h4 class="mt-3">Multiple Payment Options</h4>
                <p>Choose from credit cards, PayPal, UPI, and more for easy payments.</p>
            </div>
        </div>
    </div>
</div>


