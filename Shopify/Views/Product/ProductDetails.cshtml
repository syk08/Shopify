@model ECommerce_Project.Models.Products

@{
    ViewBag.title = "ProductDetails";
}
@if (Model == null)
{
    <h3 class="text-danger">Product not found!</h3>
}
else
{
    <div class="container mt-5 rounded shadow " >
        <div class="row">
            <!-- Left: Product Image -->
            <div class="col-md-6 text-center mt-5" style="height:100%; width:100%;">
                <img src="@Url.Content(Model.ProductImage)" class="img-fluid rounded shadow" alt="@Model.ProductName" style="max-height: 400px;">
            </div>

            <!-- Right: Product Details -->
            <div class="col-md-6 text-center mt-5"  style="height:100%; width:100%; margin-bottom:2rem;">
                <h2 class="mb-3">@Model.ProductName</h2>
                <p class="text-muted"><b>Category:</b> @Model.Category , (@Model.SubCategory)</p>

                <h4 class="text-danger"><b>₹@Model.Price</b></h4>
                <p><b>Availability:</b> <span class="badge @(Model.Status == "In Stock" ? "bg-success" : "bg-danger")">@Model.Status</span></p>

                <p class="mt-3"><b>Description:</b></p>
                <p>@Model.Description</p>

                <!-- Fake Rating -->
                <p>
                    <b>Rating:</b>
                    <span class="text-warning">
                        ★★★★☆ (4.5/5)
                    </span>
                </p>

                <!-- Buy Now Button -->
                <a href="@Url.Action("Checkout", "Product", new { id = Model.ProductId })" 
                   class="btn btn-outline-primary p-2" style="height:3rem; width:15rem;"> 
                    <i class="fas fa-shopping-cart"></i><b> Buy Now</b> 
                </a>
            </div>
        </div>
    </div>

}
