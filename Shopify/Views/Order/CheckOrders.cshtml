@model List<ECommerce_Project.Models.OrderModel>

@{
    ViewBag.title = "CheckOrders";
}


<div class="mt-4">
    <h2 class="text-center mb-4">My Orders</h2>

    @if (Model != null && Model.Any())
    {
       <div class="container-fluid">
           <div class="row">
               @foreach (var order in Model.ToList())
               {
                   <div class="col-12 mb-3 ">
                       <div class="card shadow-sm">
                           <div class="card-body p-2">
                               <div class="d-flex justify-content-between">
                                   <div class="m-3">
                                       <strong>Order ID:</strong> @order.OrderId<br />
                                       <strong>Product:</strong> @order.ProductName<br>
                                       <strong>Quantity:</strong> @order.ProductQuantity<br>
                                       <strong>Price:</strong> ₹@order.ProductPrice.ToString("0.00")
                                   </div>
                                   <div class="text-end m-3">
                                       <span class="badge bg-warning">Pending</span><br><br />
                                       <small>@order.OrderTime.ToString("MMMM dd, yyyy")</small>
                                   </div>
                               </div>
                           </div>
                       </div>
                   </div>
               }
           </div>
       </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            No orders found. Start shopping now!
        </div>
    }

    <div class="text-center mt-3">
        <a href="@Url.Action("CustomerDashboard", "Home")" class="btn btn-primary">Continue Shopping</a>
    </div>
</div>
